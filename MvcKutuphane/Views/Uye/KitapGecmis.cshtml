@using MvcKutuphane.Models.Entity
@model List<tblhareket>
@{
    ViewBag.Title = "KitapGecmis";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üye: @ViewBag.k1</h2>
<br />
<table class="table table-danger">
    <tr>
        <th>Kitap Adı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.tblkitap.ad</td>
            <td>@x.tblpersonel.personel</td>
            <td>@Convert.ToDateTime(x.alistarihi).ToString("dd/MM/yyyy")  </td>
            <td>@Convert.ToDateTime(x.uyegetirtarih).ToString("dd/MM/yyyy") </td>
        </tr>
    }
</table>

