 @using MvcKutuphane.Models.Entity
@model List<tbluyeler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üyeler</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Üye ID</th>
        <th>Üye Adı</th>
        <th>Üye Soyadı</th>
        <th>Mail</th>
        <th>KUllanıcı Adı</th>
        <th>Şifre</th>
        <th>Telefon</th>
        <th>Okul</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Üye Kitap Geçmişi</th>

    </tr>
    @foreach (var uye in Model)
    {
        <tr>

            <td>@uye.id</td>
            <td>@uye.ad</td>
            <td>@uye.soyad</td>
            <td>@uye.mail</td>
            <td>@uye.kullaniciadi</td>
            <td>@uye.sifre</td>
            <td>@uye.telefon</td>
            <td>@uye.okul</td>
            <td>
                @Html.ActionLink("Uye", "UyeSil", new { id = uye.id },
           new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz')" })
            </td>
            <td><a href="/Uye/UyeGetir/ @uye.id" class="btn btn-warning">Güncelle</a></td> 
            <td><a href="/Uye/KitapGecmis/ @uye.id" class="btn btn-warning">Kitap Geçmiş</a></td>
            

        </tr>
    }

</table>
<a href="/Uye/UyeEkle/" class="btn btn-primary">Yeni Üye Ekle</a>

