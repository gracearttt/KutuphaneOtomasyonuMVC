@using MvcKutuphane.Models.Entity
@model List<tblhareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>
        
        
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.id</td>
            <td>@k.tblkitap.ad</td>
            <td>@k.tbluyeler.ad @k.tbluyeler.soyad</td>
            <td>@k.tblpersonel.personel</td>
            <td>@Convert.ToDateTime(k.alistarihi).ToString("dd/MM/yyyy") </td>
            <td>@Convert.ToDateTime(k.iadetarihi).ToString("dd/MM/yyyy")</td>
            <td><a href="/Odunc/Odunciade/@k.id" class="btn btn-default" style="background-color:#ff6a00">Kitabı İade Et</a></td>

        </tr>
    }
</table>

