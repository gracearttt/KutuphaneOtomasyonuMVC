@using MvcKutuphane.Models.Entity
@model List<tblmesajlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Gelen Mesajlar Sayfası</h2>
<br />
<table class="table table-bordered">
    <tr>
        <td>Gönderen</td>
        <td>Konu</td>
        <td>Mesaj</td>
        <td>Tarih</td>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.gonderen</td>
            <td>@x.konu</td>
            <td>@x.icerik</td>
            <td>@x.tarih</td>
            
        </tr>
    }
</table>

