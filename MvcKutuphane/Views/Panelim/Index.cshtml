@model MvcKutuphane.Models.Entity.tbluyeler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Kütüphane Üye Profil Bilgileri</h2>

@using (Html.BeginForm("Index2", "Panelim", FormMethod.Post))
{

<table class="table table-hover" style="margin-top:30px" >
    <tr>
        <td><label style="font-weight: bolder" >Mail Adresi:</label> @HttpContext.Current.User.Identity.Name</td>
    </tr>
    <tr>
        <td>
            <label class="justify-content-center"> ID: &nbsp; </label>
            @Html.TextBoxFor(x => x.id)
        </td>
    </tr>

    <tr>
        <td>
            <label> Ad: &nbsp; </label>
            @Html.TextBoxFor(x => x.ad)
        </td>
    </tr>
    <tr>
        <td>
            <label> Soyad: &nbsp; </label>
            @Html.TextBoxFor(x => x.soyad)
        </td>
    </tr>
    <tr>
        <td>
            <label> Kullanıcı Adı: &nbsp; </label>
            @Html.TextBoxFor(x => x.kullaniciadi)
        </td>
    </tr>
    <tr>
        <td>
            <label> Şifre: &nbsp; </label>
            @Html.TextBoxFor(x => x.sifre)
        </td>
    </tr>
    <tr>
        <td>
            <label> Okul: &nbsp; </label>
            @Html.TextBoxFor(x => x.okul)
        </td>
    </tr>
    <tr>
        <td>
            <label> Fotoğraf: &nbsp; </label>
            @Html.TextBoxFor(x => x.fotograf)
        </td>
    </tr>
    <tr>
        <td> <button class="btn btn-warning">Bilgileri Güncelle</button></td>
    </tr>
</table>
}

