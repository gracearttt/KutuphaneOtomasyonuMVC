@using MvcKutuphane.Models.Entity
@model List<tblpersonel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personeller</h2>

<table class="table table-bordered">
    <tr>
        <th>Personel ID</th>
        <th>Personel Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var prs in Model)
    {
        <tr>

            <td>@prs.id</td>
            <td>@prs.personel</td>
            <td>
                @Html.ActionLink("Sil", "PersonelSil", new { id = prs.id },
           new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz')" })
            </td>
            <td><a href="/Personel/PersonelGetir/@prs.id" class="btn btn-warning">Güncelle</a></td>

        </tr>
    }

</table>
<a href="/Personel/PersonelEkle" class="btn btn-primary">Yeni Personel Ekle</a>
