@using MvcKutuphane.Models.Entity
@model List<tblyazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-striped" style="background-color:cadetblue">
    <tr style="background-color:aqua">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>DETAY</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>YAZARIN KİTAPLARI</th>


    </tr>
    @foreach (var Y in Model)
    {
        <tr>
            <td>@Y.id</td>
            <td>@Y.ad</td>
            <td>@Y.soyad</td>
            <td>@Y.detay</td>
            <td>
                @Html.ActionLink("Sil", "YazarSil", new { id = Y.id },
           new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz')" })
        </td>
        <td><a href="/Yazar/YazarGetir/@Y.id" class="btn btn-warning">GÜNCELLE</a></td>
        <td><a href="/Yazar/YazarKitaplar/@Y.id" class="btn btn-success" style="background-color:lightcoral">YAZARIN KİTAPLARI</a></td>

    </tr>
}
</table>

<a class="btn btn-primary" href="/Yazar/YazarEkle">Yeni Yazar Ekle</a>
