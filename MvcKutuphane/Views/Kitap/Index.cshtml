@using MvcKutuphane.Models.Entity
@model List<tblkitap>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazarı</th>
        <th>Kategori</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.id</td>
            <td>@k.ad</td>
            <td>@k.yazar</td>
            <td>@k.kategori</td>
            <td>@k.basimyili</td>
            <td>@k.yayinevi</td>
            <td>@k.sayfa</td>
            <td>@k.durum</td>
            <td>
                @Html.ActionLink("Sil", "KitapSil", new { id = k.id },
           new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz')" })
            </td>
            <td><a href="/Kitap/KitapGetir/@k.id" class="btn btn-warning">Güncelle</a></td>

        </tr>
    }
</table>

<a class="btn btn-primary" href="/Kitap/KitapEkle">Yeni Kitap Ekle</a>