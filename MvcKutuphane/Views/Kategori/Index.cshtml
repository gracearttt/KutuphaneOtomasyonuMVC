@using MvcKutuphane.Models.Entity
@model List<tblkategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategoriler</h2>

<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>

            <td>@x.id</td>
            <td>@x.ad</td>
            <td><a href="/Kategori/KategoriSil/@x.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@x.id" class="btn btn-warning">Güncelle</a></td>
            
        </tr>
    }

</table>
<a href="/Kategori/KategoriEkle" class="btn btn-primary">Yeni Kategori Ekle</a>

